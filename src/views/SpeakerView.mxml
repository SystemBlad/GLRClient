<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		title="导师简介">
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:HorizontalLayout gap="20" paddingLeft="20" paddingRight="20" paddingTop="20" paddingBottom="20"/>
		</s:layout>
		<s:Group width="144" height="170">
			<s:BitmapImage source="{data.teacher_avatar}" width="100%" height="100%" fillMode="scale"/>
			<s:Rect width="100%" height="100%">
				<s:stroke>
					<s:SolidColorStroke color="#319ED7"/>
				</s:stroke>
			</s:Rect>
		</s:Group>
		<s:VGroup gap="20" width="100%" height="100%">
			<s:Label width="100%" text="{data.teacher_realname}" styleName="captionText" color="#0C3170"/>
			<s:Label width="100%" height="100%" text="{data.teacher_intro}"/>
		</s:VGroup>
	</s:Group>
</s:View>