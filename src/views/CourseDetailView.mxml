<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		title="课程详情"
		viewActivate="detailService.send()"
		viewDeactivate="detailService.cancel()" xmlns:components="components.*"
		creationComplete="view1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import classes.DataManager;
			
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			
			protected function detailService_resultHandler(event:ResultEvent):void
			{
				var json:String = String(event.result);
				trace(json);
				var obj:Object = JSON.parse(json);
				if (obj.error_occurred == false)
				{
					txtIntro.text = obj.course_detail.course_introduce;
				}
			}
			
			private function playMovie():void
			{
				if (!DataManager.instance.user.loggedIn)
				{
					navigator.pushView(views.LoginView);
				}
				else
				{
					var url:String = "http://www.glr.cn/appapi/app_course_view.php?appid=";
					url += data.kvideoid;
					url += "&token=";
					url += DataManager.instance.user.token;
					trace("playUrlll="+url);
					navigator.pushView(views.CoursePlayView, url);
				}
			}
			
			protected function view1_creationCompleteHandler(event:FlexEvent):void
			{
				switch (data.button_txt)
				{
					case "观看视频":
						currentState = "available";
						break;
					default:
						currentState = "coming";
						break;
				}
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<s:HTTPService id="detailService" url="http://www.glr.cn/appapi/app_course_detail.php?kvideoid={data.kvideoid}" resultFormat="text" result="detailService_resultHandler(event)"/>
	</fx:Declarations>
	<s:states>
		<s:State name="default"/>
		<s:State name="coming"/>
		<s:State name="available"/>
	</s:states>
	<s:Scroller width="100%" height="100%" verticalScrollPolicy="on">
		<s:Group width="100%" height="100%">
			<s:layout>
				<s:MultiDPIVerticalLayout sourceDPI="320"
										  paddingTop="20" paddingBottom="20" paddingLeft="20" paddingRight="20" gap="20"/>
			</s:layout>
			<s:HGroup width="100%" gap="20">
				<s:Group width="180" height="120">
					<s:BitmapImage source="{data.pic}" width="100%" height="100%" fillMode="scale"/>
					<s:Rect width="100%" height="100%">
						<s:stroke>
							<s:SolidColorStroke color="#000000"/>
						</s:stroke>
					</s:Rect>
				</s:Group>
				<s:VGroup gap="20" width="100%">
					<s:Label text="{data.subject}" styleName="captionText"/>
					<s:HGroup width="100%">
						<s:Label text="主讲人：{data.teacher_realname}" color="#666666"/>
						<s:Spacer width="100%"/>
						<s:BitmapImage source="@Embed('assets/small-icon-popularity.png')"/>
						<s:Label text="{data.viewnum}" height="100%" color="#666666" verticalAlign="bottom"/>
					</s:HGroup>
				</s:VGroup>
			</s:HGroup>
			<s:Group width="180" height="60">
				<s:Rect width="100%" height="100%" radiusX="8">
					<s:fill>
						<s:SolidColor color.available="#82CB23" color.coming="#CCCCCC"/>
					</s:fill>
					<s:stroke>
						<s:SolidColorStroke color="#000000" alpha="0.2" weight="2"/>
					</s:stroke>
				</s:Rect>
				<s:Label text="{data.button_txt}"
						 width="100%" height="100%"
						 color.available="#FFFFFF" color.coming="#FFFFFF"
						 textAlign="center" verticalAlign="middle"
						 click="playMovie()"
						 enabled.coming="false" enabled.available="true"
						 mouseEnabled.coming="false" mouseEnabled.available="true"/>
			</s:Group>
			<s:VGroup width="100%" gap="0">
				<s:HGroup width="100%">
					<s:Spacer width="100%"/>
					<s:Label text="课程简介" backgroundColor="#319ED7" color="#FFFFFF" height="100%" verticalAlign="middle"
							 paddingLeft="10" paddingRight="10" paddingTop="8" paddingBottom="6"/>
				</s:HGroup>
				<s:Label backgroundColor="#319ED7" width="100%" height="2"/>
			</s:VGroup>
			<s:Label id="txtIntro" width="100%" textAlign="left" color="#666666"/>
		</s:Group>
	</s:Scroller>
</s:View>