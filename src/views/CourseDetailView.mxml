<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		title="课程详情"
		viewActivate="detailService.send()"
		viewDeactivate="detailService.cancel()">
	<fx:Script>
		<![CDATA[
			import classes.DataManager;
			
			import mx.rpc.events.ResultEvent;
			
			protected function detailService_resultHandler(event:ResultEvent):void
			{
				var json:String = String(event.result);
				trace(json);
				var obj:Object = JSON.parse(json);
				if (obj.error_occurred == false)
				{
					txtIntro.text = obj.course_detail.course_introduce;
				}
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<s:HTTPService id="detailService" url="http://www.glr.cn/appapi/app_course_detail.php?kvideoid={DataManager.instance.currentCourse.kvideoid}" resultFormat="text" result="detailService_resultHandler(event)"/>
	</fx:Declarations>
	<s:Scroller width="100%" height="100%" verticalScrollPolicy="on">
		<s:Group width="100%" height="100%">
			<s:layout>
				<s:MultiDPIVerticalLayout sourceDPI="320"
										  paddingTop="20" paddingBottom="20" paddingLeft="20" paddingRight="20" gap="20"/>
			</s:layout>
			<s:HGroup width="100%" gap="20">
				<s:Group width="180" height="120">
					<s:BitmapImage source="{DataManager.instance.currentCourse.pic}" width="100%" height="100%" fillMode="scale"/>
					<s:Rect width="100%" height="100%">
						<s:stroke>
							<s:SolidColorStroke color="#000000"/>
						</s:stroke>
					</s:Rect>
				</s:Group>
				<s:VGroup gap="20" width="100%">
					<s:Label text="{DataManager.instance.currentCourse.subject}"/>
					<s:HGroup width="100%">
						<s:Label text="主讲人：{DataManager.instance.currentCourse.teacher_realname}" fontSize="24" color="#666666"/>
						<s:Spacer width="100%"/>
						<s:Label text="人气：{DataManager.instance.currentCourse.viewnum}" fontSize="24" color="#666666"/>
					</s:HGroup>
				</s:VGroup>
			</s:HGroup>
			<s:VGroup width="100%" gap="0">
				<s:HGroup width="100%">
					<s:Spacer width="100%"/>
					<s:Label text="课程简介" fontSize="24" backgroundColor="#319ED7" color="#FFFFFF" height="100%" verticalAlign="middle"
							 paddingLeft="10" paddingRight="10" paddingTop="8" paddingBottom="6"/>
				</s:HGroup>
				<s:Label backgroundColor="#319ED7" width="100%" height="2"/>
			</s:VGroup>
			<s:Label id="txtIntro" width="100%" textAlign="left" fontSize="24" color="#666666"/>
		</s:Group>
	</s:Scroller>
</s:View>
