<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		title="搜索"
		xmlns:components="components.*">
	<fx:Script>
		<![CDATA[
			import classes.DataManager;
			
			import events.SearchEvent;
			
			private function doSearch(event:SearchEvent):void
			{
				DataManager.instance.searchQuery = event.query;
				navigator.pushView(views.SearchResultView);
			}
		]]>
	</fx:Script>
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:MultiDPIVerticalLayout sourceDPI="320"
									  paddingTop="20" paddingBottom="0" paddingLeft="0" paddingRight="0" gap="0"/>
		</s:layout>
		<s:HGroup width="100%" height="60" paddingLeft="20" paddingRight="20">
			<components:SearchField width="100%" search="doSearch(event)"/>
		</s:HGroup>
	</s:Group>
</s:View>
