<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"  height="100%" creationComplete="creationCompleteHandler(event)" xmlns:renderers="renderers.*">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
		
		<s:ArrayList id="messageList"/>
		
		
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import spark.events.IndexChangeEvent;
			
			private var messageArr:Array = new Array();

           public function addMessage(msg:Object):void{
			   
			   messageArr.push(msg)
				   
				   //trace("added item")
			   
		   }
			
			
			
		   public function refreshMessage(msgArr:Array):void{
				
			   //trace("refresh messages")
			   messageArr = msgArr;
			   
			   messageList.source = messageArr;
				
		   }
			
			
			
			
			protected function list_changeHandler(event:IndexChangeEvent):void
			{
				
			}
			
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				
				messageList.source = messageArr;
				
			}
			
		]]>
	</fx:Script>
	
	<s:Group width="330" height="100%" alpha="0.75">
		<s:layout>
			<s:MultiDPIVerticalLayout sourceDPI="320"
									  paddingTop="0" paddingBottom="0" paddingLeft="0" paddingRight="0" gap="0"/>
		</s:layout>
		
		<s:Spacer width="100%" height="60"/>
		
		<s:List visible="true" id="list" width="100%" height="100%" dataProvider="{messageList}" contentBackgroundAlpha="0" 
				change="list_changeHandler(event)">
			<s:itemRenderer>
				<fx:Component>
					<renderers:MessageItemRenderer iconWidth="38" iconHeight="38"
												  iconFillMode="clip" iconScaleMode="letterbox"
												  iconPlaceholder="@Embed('assets/icon_head.png')"
												  
												  iconFunction = "getIcon"
												  labelField="subject">
						<fx:Script>
							<![CDATA[
								private function getIcon(item:Object):String{
									
									return  item.value.avatar;
								}
							]]>
						</fx:Script>
					</renderers:MessageItemRenderer>
				</fx:Component>
			</s:itemRenderer>
		</s:List>
		
		<s:HGroup id="buttonBar" width="100%" height="20" verticalAlign="middle">
			<s:Spacer width="100%"/>
			<s:Label text="online students number:" fontSize="15" height="60" verticalAlign="middle"/>
			
			<s:Spacer width="100%"/>
		</s:HGroup>
	
	
	
	</s:Group>
	
	
</s:Group>
